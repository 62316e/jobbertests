{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "src",
        "tests/index.test.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}